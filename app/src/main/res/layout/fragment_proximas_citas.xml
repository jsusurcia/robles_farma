<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.citas.ProximasCitasFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewProximas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"
        android:clipToPadding="false"/>

    <LinearLayout
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_calendar"
            app:tint="@color/teal_500" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No tienes próximas citas"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginTop="16dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parece que aún no has reservado ninguna cita médica."
            android:textSize="14sp"
            android:textColor="?android:attr/textColorTertiary"
            android:layout_marginTop="8dp"
            android:gravity="center"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReservarCita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservar cita"
            android:layout_marginTop="24dp"
            style="@style/Widget.Material3.Button"
        android:visibility="visible" />

    </LinearLayout>

</FrameLayout>