<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface"
    tools:context=".ui.citas.DetalleCitaFragment">

    <!-- Detalles de la cita -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Fecha -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/principal_bg" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha:"
                        android:textSize="12sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/tvFecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15 de Diciembre de 2024"
                        android:textSize="14sp"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>

            <!-- Hora -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_hora"
                    app:tint="@color/principal_bg" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hora:"
                        android:textSize="12sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/tvHora"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:30 AM"
                        android:textSize="14sp"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>

            <!-- Ubicación -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:gravity="top">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_ubicacion"
                    app:tint="@color/principal_bg" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ubicación:"
                        android:textSize="12sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/tvUbicacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clínica Central, Sala 3 Av. Principal 123, Ciudad"
                        android:textSize="14sp"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>

            <!-- Botón Enviar mensaje -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditarUbicacion"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="EDITAR UBICACION"
                android:textSize="14sp"
                android:textColor="@color/principal_bg"
                app:icon="@drawable/ic_ubicacion_actual"
                app:iconTint="@color/principal_bg"
                app:iconPadding="8dp"
                app:strokeColor="@color/principal_bg"
                app:strokeWidth="1dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Detalles del médico -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <!-- Imagen circular del médico -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circleImageViewDoctor"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/default_doctor_image" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/tvNombreMedico"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dra. Polo"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/tvEspecialidad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Especialista en Cardiología"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Botón Enviar mensaje -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEnviarMensaje"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Enviar mensaje"
                android:textSize="14sp"
                android:textColor="@color/principal_bg"
                app:icon="@drawable/ic_chat"
                app:iconTint="@color/principal_bg"
                app:iconPadding="8dp"
                app:strokeColor="@color/principal_bg"
                app:strokeWidth="1dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Botones de acción -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Cancelar"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/cancelada_color"
            app:cornerRadius="8dp"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReprogramar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Reprogramar"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/pendiente_color"
            app:cornerRadius="8dp" />
    </LinearLayout>
</LinearLayout>